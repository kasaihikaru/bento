<div class="container">
  <div class="devise-center">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="label"><%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, placeholder: 'ニックネームを入力(必須)' %></div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレスを入力(必須)' %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: 'パスワードを入力(必須)' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワードを入力（確認）' %>
      </div>

      <div class="actions">
        <%= f.submit "登録" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>