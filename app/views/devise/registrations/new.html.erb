<% provide :title, " | 新規登録" %>

<div class="container">
  <div class="row col-xs-12">
    <div class="devise-center">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="label">
          <%= f.label :nickname, "ニックネーム" %><span class="red">(必須)</span><br />
          <%= f.text_field :nickname, placeholder: '最大15文字まで', maxlength: '15' %>
        </div>

        <div class="field">
          <%= f.label :email, 'メールアドレスを入力' %><span class="red">(必須)</span><br />
          <%= f.email_field :email, autofocus: true, placeholder: '' %>
        </div><br>

        <div class="field">
          <%= f.label :password, "パスワードを入力" %><span class="red">(必須)</span>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: '' %>
        </div><br>

        <div class="field">
          <%= f.label :password_confirmation, "パスワードを入力（確認）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '' %>
        </div><br>

        <div class="field">
          <%= f.label :avatar, "プロフィール画像(後から追加できます)" %><br />
          <%= f.file_field :avatar %>
        </div><br>


        <div class="label"><%= f.label :blog, "ブログ、HP(後から追加できます)" %><br />
            <%= f.text_field :blog, placeholder: 'URL' %>
        </div><br><br>

        <div class="label"><%= f.label :introduction, "自己紹介（後から追加できます）" %><br />
            <%= f.text_area :introduction, placeholder: '学習の目標、意気込みなどを書いてみましょう！', maxlength: '50000' %>
        </div><br>

        <div class="actions">
          <%= f.submit "登録" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>